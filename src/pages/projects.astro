---
import SiteLayout from "../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";
import ProjectLink from "../components/ProjectLink.astro";

const projects = await getCollection("other-projects");
---

<SiteLayout
  title="Lennox C. Charles Projects"
  description="See the projects I worked on so far, and technologies I am interested in."
>
  <main class="mx-auto pb-28 sm:px-6 md:px-8 xl:px-12 lg:max-w-3xl">
    <aside class="lg:space-y-14 space-y-6 lg:w-4/5 sm:w-10/12 sm:mt-12">
      {
        projects.map((project) => (
          <>
            <ProjectLink
              title={project.data.title}
              description={project.data.description}
              link={project.data.link}
              cta={project.data.cta}
            />
            <img
              src={project.data.img}
              alt="A picture of ABR"
              loading="lazy"
              class="rounded-md w-full sm:w-72 lg:w-96 lg:h-60 sm:object-cover"
            />
          </>
        ))
      }
    </aside>
  </main>
</SiteLayout>
